      <div>Client name</div>
      <div>Phone</div>
      <div>Worker</div>
      <div>Jobs</div>
      <div>Category</div>
      <div></div>
    </div>
    <div id="orders">
      <%= render @orders %>
    </div>
  </div>
</div>
