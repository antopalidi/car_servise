<%= turbo_frame_tag job do %>
  <%= form_with(model: job, class: "contents") do |form| %>
    <% if job.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

        <ul>
          <% job.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.label :title %>
      <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="my-5">
      <%= form.label :category_id %>
      <%= form.collection_select(:category_id, Category.all, :id, :title,
                                 { prompt: 'Select' },
                                 { class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2
                               w-full' }) %>
    </div>

    <div class="inline">
      <%= form.submit class: "rounded-lg mb-6 py-3 px-5 bg-blue-600 text-white inline-block font-medium
      cursor-pointer" %>
    </div>
  <% end %>
<% end %>
